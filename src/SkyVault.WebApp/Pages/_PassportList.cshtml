@using SkyVault.Payloads.CommonPayloads
<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Last Name</th>
        <th>Passport No.</th>
        <th>Issue Date</th>
        <th>Expiry Date</th>
    </tr>
    </thead>
    <tbody id="search-results">
    @if (TempData["CustomerProfile.PassportList"] != null)
    {
        @foreach (var passport in (TempData["CustomerProfile.PassportList"] as Passport[])!)
        {
            <tr>
                <td>
                    <a href="#" data-bs-toggle="modal" data-bs-target="#passportModal">@passport.LastName</a>
                </td>
                <td>
                    @passport.OtherNames
                </td>
                <td>
                    @passport.PassportNumber
                </td>
                <td>
                    @passport.DateOfBirth    
                </td>
                <td>
                    @passport.ExpiryDate
                </td>
            </tr>
        }
    }
    </tbody>
</table>