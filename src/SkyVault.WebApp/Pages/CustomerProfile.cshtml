@page
@model SkyVault.WebApp.Pages.CustomerProfileModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewBag.Title = "Customer Profile - SkyVault(24.04)/DEV";
}

<div class="pagetopcontainer">
    <h2>
        Customer Profile
    </h2>
    <div class="maincontent">
        <div class="accordion accordion-flush customaccordion customItemBtnBottom" id="accordionFlushExample">
            <div class="accordion-item">
                <h2 class="accordion-header topaccordionitemcustom customItem" id="flush-headingOne">
                    <button class="accordion-button collapsed accordion-title customItemBtnTop" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                        Passport Information
                    </button>
                </h2>
                <div id="flush-collapseOne" class="accordion-collapse collapse accordionitemcustom" aria-labelledby="flush-headingOne">
                    <div class="accordion-body">
                        <div class="row bottomSaveButton my-3">
                            <div class="moveright">
                                <button class="commonbtn"
                                        data-bs-toggle="modal" data-bs-target="#addPassportModal">
                                    <img class="plusicon" src="~/img/icons/plus_icon.png" alt=""/> Add Passport &nbsp;
                                </button>
                            </div>
                        </div>
                        <div id="passportList"
                             hx-get="@Url.Page("CustomerProfile", "PassportList")"
                             hx-trigger="refreshPassportList from:body"
                             hx-target="#passportList"
                             hx-headers='{"CUSTOMER_ID": "@TempData["CustomerProfile.ID"]"}'>
                            
                            <partial name="_PassportList" model="Model"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header accordionitemcustom accordion-title" id="flush-headingTwo">
                    <button class="accordion-button collapsed accordion-title" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                        VISA Information
                    </button>
                </h2>
                <div id="flush-collapseTwo" class="accordion-collapse collapse accordionitemcustom" aria-labelledby="flush-headingTwo">
                    <div class="accordion-body">
                        <div class="row bottomSaveButton my-3">
                            <div class="moveright">
                                <button class="commonbtn">
                                    <img class="plusicon" src="~/img/icons/plus_icon.png" alt=""/> Add VISA &nbsp;
                                </button>
                            </div>
                        </div>
                        <div id="visaList">
                            <partial name="_VisaList" model="Model"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header accordionitemcustom" id="flush-headingThree">
                    <button class="accordion-button collapsed accordion-title" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
                        Frequent Flyer Number
                    </button>
                </h2>
                <div id="flush-collapseThree" class="accordion-collapse collapse accordionitemcustom" aria-labelledby="flush-headingThree">
                    <div class="accordion-body">
                        <div class="row bottomSaveButton my-3">
                            <div class="moveright">
                                <button class="commonbtn">
                                    <img class="plusicon" src="~/img/icons/plus_icon.png" alt=""/> Add Frequent Flying Number &nbsp;
                                </button>
                            </div>
                        </div>
                        <div class="row my-3">
                            <div class="col-md-6">
                                <input type="text" class="form-control customtext" placeholder="Flyer Number"/>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="accordion-item customItemBtnBottom">
                <h2 class="accordion-header accordionitemcustom customItemBtnBottom" id="flush-headingFour">
                    <button class="accordion-button collapsed accordion-title customItemBtnBottom" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseFour" aria-expanded="false" aria-controls="flush-collapseFour">
                        Preferred Communication Method
                    </button>
                </h2>
                <div id="flush-collapseFour" class="accordion-collapse collapse customItemBtnBottom accordionitemcustom" aria-labelledby="flush-headingFour">
                    <div class="accordion-body">
                        <div class="row prefferedComMethArea">
                            <div class="form-check col-md-4">
                                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                                <label class="form-check-label" for="flexRadioDefault1">
                                    WhatsApp
                                </label>
                            </div>
                            <div class="form-check col-md-4">
                                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                                <label class="form-check-label" for="flexRadioDefault1">
                                    Email
                                </label>
                            </div>
                            <div class="form-check col-md-4">
                                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                                <label class="form-check-label" for="flexRadioDefault1">
                                    None
                                </label>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <br/>
    </div>
</div>

<!-- Passport Modal Start -->
<partial name="_Passport" model="Model"/>
<partial name="_AddPassport" model="Model"/>
<!-- Passport Modal End -->

<!-- VISA Modal Start -->
<partial name="_Visa" model="Model"/>
<!-- VISA Modal End -->

<script src="js/pages/customerprofile.js"></script>