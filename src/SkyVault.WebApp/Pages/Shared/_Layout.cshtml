<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet"/>
    <link href="~/css/navbar.css" rel="stylesheet"/>
</head>
<body>
<div class="maincontainer">
    <div class="navbarcontainer">
        <div class="navbarcard">
            <div class="navbarlogocontainer">
                <img class="navbarlogo" src="~/img/brand_logo.png" alt="logo"/>
                <div class="navbarbranding">
                    <p class="brandtitle">Sky Vault</p>
                    <p class="versionnumber">v1.0.0</p>
                </div>
            </div>
            <div class="navbarhr"></div>
            <partial name="_Menu" model="Model"/>
            <div class="navbarhr"></div>
            <div class="userprofilecontainer">
                <div>
                    <img class="userlogo" src="~/img/icons/default_profile_icon.png" alt="profile logo"/>
                </div>
                <partial name="_UserInfo" model="Model"/>
            </div>
        </div>
    </div>
    <div class="contentcontainer">
        @RenderBody()
    </div>
</div>
<script src="https://unpkg.com/htmx.org@1.9.10"></script>
</body>
</html>